{
  "compilerOptions": {
    "target": "ES6", // 指定 ECMAScript 目标版本
    "module": "commonjs", // 指定模块系统
    "outDir": "./dist", // 指定输出目录
    "rootDir": "./src", // 指定输入文件的根目录
    "strict": true, // 启用所有严格类型检查选项
    "esModuleInterop": true, // 启用对 ES 模块默认导入的互操作性
    "skipLibCheck": true, // 跳过库文件的类型检查
    "forceConsistentCasingInFileNames": true, // 强制文件名一致的大小写
    "resolveJsonModule": true, // 允许导入 JSON 文件
    "sourceMap": true // 生成 .map 文件
  },
  "include": ["src"], // 包含的文件
  "exclude": ["node_modules", "dist"] // 排除的文件
}
